    "ips_pools_{pool_name}_ips": {
        "parameters": [
            {
                "name": "pool_name",
                "in": "path",
                "description": "The name of the IP pool you want to add the address to. If the name contains spaces, they must be URL encoded (e.g., \"Test Pool\" becomes \"Test%20Pool\").",
                "required": true,
                "schema": {
                    "type": "string"
                }
